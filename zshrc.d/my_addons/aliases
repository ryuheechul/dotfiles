alias glow="~/.config/lf/glow.sh"

alias fzfp='fzf --height 100% --preview "bat --style=numbers --color=always {}"'
alias fzfpp='fzf|fpp'

# diff with bat
function bdiff () { diff -u $@ | bat;} # use `vimdiff` for editing

