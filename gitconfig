# vim: set ft=gitconfig:

[init]
  defaultBranch = main

[pull]
  ff = only

[status]
  submoduleSummary = 5 # 5 means it will show up to 5 logs
  # using -1 will mean it's infinite so it will show every log

[diff]
  submodule = log

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  features = line-numbers decorations
  whitespace-error-style = 22 reverse

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none

# No longer having to rewrite http urls to ssh ones manually
# thanks to https://www.jvt.me/posts/2019/03/20/git-rewrite-url-https-ssh
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
	insteadOf = https://gitlab.com/
